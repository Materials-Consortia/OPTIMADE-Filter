YP_FILE  = FilterParser.yp
PM_FILE  = ${YP_FILE:%.yp=lib/OPTiMaDe/%.pm}
OUT_FILE = ${YP_FILE:%.yp=%.output}

.PHONY: all clean-YAPP distclean-YAPP

all tests: ${PM_FILE}

lib/OPTiMaDe/%.pm: %.yp
	yapp -v -m OPTiMaDe::FilterParser -o $@ $<

clean: clean-YAPP

clean-YAPP:
	rm -f *~
	rm -f ${OUT_FILE}

cleanAll distclean: distclean-YAPP

distclean-YAPP: clean-YAPP
	rm -f ${PM_FILE}
